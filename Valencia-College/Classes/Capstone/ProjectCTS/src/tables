
CREATE TABLE IF NOT EXISTS SKILL (
	SKILL_ID INT PRIMARY KEY NOT NULL,
	SKILL_NAME VARCHAR(15),
	SKILL_ATTRIBUTE INT NOT NULL DEFAULT 0
);

CREATE TABLE IF NOT EXISTS ATTRIBUTES (
	ATTRIBUTES_ID INT PRIMARY KEY NOT NULL,
	ATTRIBUTES_NAME VARCHAR(10)
);

CREATE TABLE IF NOT EXISTS DEITIES (
	DEITIES_ID INT PRIMARY KEY NOT NULL,
	DEITIES_NAME VARCHAR(25),
	DEITIES_ALIGNMENT CHAR(2) NOT NULL DEFAULT 'NN'
);

CREATE TABLE IF NOT EXISTS DOMAINS (
	DOMAIN_ID INT PRIMARY KEY NOT NULL,
	DOMAIN_NAME VARCHAR(15) NOT NULL,
	DOMAIN_DESCRIPTION VARCHAR(140) NOT NULL
);

CREATE TABLE IF NOT EXISTS DEITY_DOMAINS (
	DEITY_ID INT NOT NULL DEFAULT 0,
	DOMAIN_ID INT NOT NULL DEFAULT 0
);

CREATE TABLE IF NOT EXISTS DOMAIN_SPELLS_LIST (
	DOMAINS_ID INT PRIMARY KEY NOT NULL,
	SPELL_ID INT NOT NULL DEFAULT 0
);

CREATE TABLE IF NOT EXISTS ITEMS (
	ITEMS_ID INT PRIMARY KEY NOT NULL,
	ITEM_NAME VARCHAR(30),
	ITEM_DESCRIPTION TEXT,
	ITEM_TYPE VARCHAR(20),
	ITEM_COST DOUBLE,
	ITEM_WEIGHT DOUBLE,
	ITEM_BREAK INT,
	ITEM_RANGE INT,
	ITEM_DAMAGE VARCHAR(7),
	ITEM_CRITICAL INT,
	ITEM_DAMAGE_TYPE VARCHAR(20),
	ITEM_AC INT,
	ITEM_MAXDEX INT,
	ITEM_ACPENALTY INT,
	ITEM_SPELLFAILURE INT,
	ITEM_MAXSPEED INT	
);

CREATE TABLE IF NOT EXISTS LANGUAGES (
	LANGUAGES_ID INT PRIMARY KEY NOT NULL,
	LANGUAGE_NAME VARCHAR(40)
);

CREATE TABLE IF NOT EXISTS NATIONALITY (
	NATIONALITY_ID INT PRIMARY KEY NOT NULL,
	NATIONALITY_NAME TEXT,
	NATIONALITY_DESC TEXT
);

CREATE TABLE IF NOT EXISTS FEAT (
	FEAT_ID INT PRIMARY KEY NOT NULL,
	FEAT_NAME VARCHAR(40),
	FEAT_DESCRIPTION TEXT,
	FEAT_PREREQUISITE TEXT
);

CREATE TABLE IF NOT EXISTS CLASSES (
	CLASSES_ID INT PRIMARY KEY NOT NULL,
	CLASSES_NAME VARCHAR(25),
	CLASSES_DESCRIPTION TEXT,
	CLASSES_SKILL_PER_LEVEL INT NOT NULL DEFAULT 2,
	CLASSES_SKILL_ATTRIBUTE INT NOT NULL DEFAULT 4,
	CLASSES_SKILL_MULTIPLIER INT DEFAULT 4,
	CLASSES_GOLD_DICE INT
);

CREATE TABLE IF NOT EXISTS CLASS_SKILLS (
	CLASS_ID INT NOT NULL,
	SKILL_ID INT NOT NULL DEFAULT 0
);

CREATE TABLE IF NOT EXISTS RACE (
	RACE_ID INT NOT NULL,
	RACE_NAME VARCHAR(25),
	RACE_DESCRIPTION TEXT,
	RACE_LANGUAGE VARCHAR(40),
	RACE_SPEED INT,
	RACE_SIZE CHAR(1) NOT NULL DEFAULT 'M'
);

CREATE TABLE IF NOT EXISTS RACE_BONUS (
	RACE_ID INT NOT NULL,
	ATTRIBUTE_ID INT NOT NULL DEFAULT 0,
	BONUS_VALUE INT
);

CREATE TABLE IF NOT EXISTS SPELL (
	SPELL_ID INT PRIMARY KEY NOT NULL,
	SPELL_PREREQUISITES TEXT,
	SPELL_NAME VARCHAR(50),
	SPELL_DESCRIPTION TEXT,
	SPELL_RANGE INT DEFAULT 0,
	SPELL_RADIUS INT,
	SPELL_AREA_OF_EFFECT VARCHAR(20),
	SPELL_DURATION INT DEFAULT 0,
	SPELL_LEVEL INT
);

CREATE TABLE IF NOT EXISTS SPELL_SCHOOLS (
	SCHOOL_ID INT NOT NULL DEFAULT 0,
	SCHOOL_NAME VARCHAR(15)
);

CREATE TABLE IF NOT EXISTS SPELL_TYPES (
	SPELL_ID INT NOT NULL DEFAULT 0,
	SPELL_SCHOOL INT
);

CREATE TABLE IF NOT EXISTS FOLLOWER_LIST (
	CHARACTER_ID INT NOT NULL DEFAULT 0,
	FOLLOWER_ID INT NOT NULL DEFAULT 0
);
